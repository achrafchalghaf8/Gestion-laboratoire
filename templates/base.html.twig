   <script>
function search() {
  var searchTerms = document.getElementById("searchBar").value.split(/\s+/);
  var content = document.body.innerHTML;
  for (var i = 0; i < searchTerms.length; i++) {
    var searchTerm = searchTerms[i];
    var highlightedContent = content.replace(new RegExp(searchTerm, "gi"), "<span style='background-color: yellow;'>" + searchTerm + "</span>");
    content = highlightedContent;
  }
  document.body.innerHTML = highlightedContent;
}

    
	</script>
  
