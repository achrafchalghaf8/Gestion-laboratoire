{% extends 'base.html.twig' %}


{% block title %}Ajouter Resultat Projet
{% endblock %}

{% block body %}

	<h1>Ajouter Resultat Projet</h1>
<style>
    /* Style the form container */
    .form-container {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
        background-color: #f9f9f9;
    }

    /* Style the form fields */
    .form-container input[type="text"],
    .form-container input[type="number"], 
    .form-container input[type="email"],
    .form-container input[type="file"]  {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Style the submit button */
    .form-container input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

    /* Clear floats after the form */
    .form-container::after {
        content: "";
        clear: both;
        display: table;
    }
    h1 {
      font-size: 36px;
      font-family: Arial, sans-serif;
      text-align: center;
    }
</style>
<div class="form-container">
    
    {{ form_start(form, {'method': 'PUT'}) }}
    
    {{ form_row(form.titre, {'disabled': true, 'attr': {'placeholder': "titre du projet"}}) }}
    {{ form_widget(form.description, {'disabled': true, 'attr': {'class': 'form-control form-description', 'placeholder': "Description du projet", 'style': 'width: 80%; margin: 0 auto;', 'rows': '5' }}) }}
    {{ form_row(form.date_debut, {'disabled': true, 'attr': {'placeholder': "date debut du projet "}}) }}
    {{ form_row(form.date_fin, {'disabled': true, 'attr': {'placeholder': "date fin du projet "}}) }}
    {{ form_row(form.membres_equipe, {'disabled': true, 'attr': {'placeholder': "membres d'équipe qui participent dans le projets"}}) }}
    
    {{ form_row(form.description_resultat, {'attr': {'class': 'form-control form-description', 'placeholder': "Description de la résultat du projet", 'style': 'width: 80%; margin: 0 auto;', 'rows': '5' }}) }}
    
    {{ form_row(form.image, {'disabled': true, 'label': 'Choisir un fichier'}) }}
    
    <input type="submit" value="{{valeurBtnSubmit|default("Modifier projet") }}" class="btn btn-primary" formnovalidate>
    
    {{ form_end(form) }}
</div>
</div></div><br><br>
{% include 'footer.html.twig' %}

{% endblock %}