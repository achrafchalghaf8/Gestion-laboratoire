<head>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.css">
</head>
<style>
    /* Style the form container */
    .form-container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
        background-color: #f9f9f9;
    }


    /* Style the form fields */
    .form-container input[type="text"], 
    .form-container input[type="email"],
    .form-container input[type="number"],
    .form-container input[type="file"] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Style the submit button */
    .form-container input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

    /* Clear floats after the form */
    .form-container::after {
        content: "";
        clear: both;
        display: table;
    }
    h1 {
      font-size: 36px;
      font-family: Arial, sans-serif;
      text-align: center;
    }
    

</style>

<div class="form-container">
    {{ form_start(formActualite, { 'attr': { 'enctype': 'multipart/form-data' } }) }}
    <div class="form-group">
        {{ form_label(formActualite.titre, 'Titre actualité') }}
    <span style="color:red;">{{ form_errors(formActualite.titre) }}</span>
        {{ form_widget(formActualite.titre, {'attr': {'placeholder': "Titre actualite", 'class': 'form-control' }}) }}
    </div>

    <div class="form-group">
        {{ form_label(formActualite.description, 'Description actualité') }}
    <span style="color:red;">{{ form_errors(formActualite.description) }}</span>
        {{ form_widget(formActualite.description, {'attr': {'class': 'form-control form-description', 'placeholder': "Description actualite", 'style': 'width: 100%; margin: 0 auto;', 'rows': '5' }}) }}
    </div>

    <div class="form-group">
        <label for="{{ formActualite.date.vars.id }}">Date de début</label>
        {{ form_errors(formActualite.date) }}
        {{ form_widget(formActualite.date, {'attr': {'placeholder': 'Date Actualité', 'class': 'form-control', 'type': 'date'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(formActualite.image, 'Choisir un fichier') }}
    <span style="color:red;">{{ form_errors(formActualite.image) }}</span>
        {{ form_widget(formActualite.image, {'label': 'Choisir un fichier'}) }}
    </div>

    <div class="form-group">
        <input type="submit" value="{{ valeurBtnSubmit|default("Ajouter Actualité") }}" formnovalidate>
    </div>

    {{ form_end(formActualite) }}
</div>

