<style>
    /* Style the form container */
    .form-container {
        width: 50%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
        background-color: #f9f9f9;
        position: relative; /* add position relative to parent element */
    }

    /* Style the form fields */
    .form-container input[type="text"],
    .form-container input[type="number"], 
    .form-container input[type="email"],
    .form-container input[type="file"] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Style the submit button */
    .form-container input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        position: absolute; /* add position absolute to button */
        bottom: 20px; /* distance from bottom of the parent element */
        right: 20px; /* distance from right of the parent element */
    }

    /* Clear floats after the form */
    .form-container::after {
        content: "";
        clear: both;
        display: table;
    }
    h1 {
      font-size: 36px;
      font-family: Arial, sans-serif;
      text-align: center;
    }
</style>
