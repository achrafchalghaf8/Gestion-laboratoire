<head>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.css">
</head>
<style>
    /* Style the form container */
      .form-container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
        background-color: #f9f9f9;
    }

    /* Style the form fields */
    .form-container input[type="text"],
    .form-container input[type="number"], 
    .form-container input[type="email"] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Style the submit button */
    .form-container input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

    /* Clear floats after the form */
    .form-container::after {
        content: "";
        clear: both;
        display: table;
    }
    h1 {
      font-size: 36px;
      font-family: Arial, sans-serif;
      text-align: center;
    }
</style>
<div class="form-container">
    {{ form_start(formPublication, {'method': 'PUT'})}}

    <div class="form-group">
    {{ form_label(formPublication.titre, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.titre) }}</span>
    {{ form_widget(formPublication.titre, {'attr': {'class': 'form-control', 'placeholder': "Titre de la publication"}})}}
</div>

<div class="form-group">
    {{ form_label(formPublication.type, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.type) }}</span>
    <div class="row">
        <div class="col-md-6">
            {{ form_widget(formPublication.type, {'attr': {'class': 'form-control', 'placeholder': "Type de la publication"}}) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(formPublication.date_publication, {'attr': {'class': 'form-control', 'placeholder': "Date de la publication", 'type': 'date'}}) }}
            <span style="color: red;">{{ form_errors(formPublication.date_publication) }}</span>
        </div>
    </div>
</div>

<div class="form-group">
    {{ form_label(formPublication.auteur, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.auteur) }}</span>
    {{ form_widget(formPublication.auteur, {'attr': {'class': 'form-control','placeholder': "account "}})}}
</div>

<div class="form-group">
    {{ form_label(formPublication.resume, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.resume) }}</span>
    {{ form_widget(formPublication.resume, {'attr': {'class': 'form-control form-description', 'placeholder': "Resumé de la publication", 'style': 'width: 100%; margin: 0 auto;', 'rows': '5' }}) }}
</div>
<div class="form-group">
    {{ form_label(formPublication.details, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.details) }}</span>
    {{ form_widget(formPublication.details, {'attr': {'placeholder': "Détails de la publication "}})}}
</div>
<div class="form-group">
    {{ form_label(formPublication.lien_donnees, null, {'label_attr': {'class': 'control-label'}}) }}
    <span style="color: red;">{{ form_errors(formPublication.lien_donnees) }}</span>
    {{ form_widget(formPublication.lien_donnees, {'attr': {'placeholder': "Lien vers les données de la publication "}})}}
</div>

<input type="submit" value="{{valeurBtnSubmit|default("Ajouter publication") }}" class="btn btn-primary" formnovalidate>

{{ form_end(formPublication)}}
</div>


