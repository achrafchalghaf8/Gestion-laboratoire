{% extends 'base.html.twig' %}

{% block title %}
    {{ conference.nom_conference }}
{% endblock %}


{% block body %}

<div class="container">
    <br>
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="{{ asset('uploads/' ~ conference.image) }}" alt="Image de la conférence" style="display: block; margin: 0 auto; width: 100%; padding: 0;">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>{{ conference.nom_conference }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <p><strong>Date de début :</strong> {{ conference.date_debut|date('Y-m-d') }}</p>
            <p><strong>Durée :</strong> {{ conference.dure }}</p>
            <p><strong>Lieu :</strong> {{ conference.lieu }}</p>
            <p><strong>Domaine :</strong> {{ conference.domaine }}</p>
            <p><strong>Sponsors :</strong> {{ conference.sponseurs }}</p>
            <p><strong>Nombre de participants :</strong> {{ conference.nb_participants }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <hr>
            <h3>Description de la conférence</h3>
<div style="text-align: justify; font-family: Arial, sans-serif; font-size: 18px; line-height: 1.5; padding: 10px; margin: 10px;">
  <p style="text-indent: 20px;">{{ conference.description }}</p>
</div>


            <hr>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <div class="row">
        <div class="col-md-12 text-center">
            <h3>Actions</h3>
            <p>
                                     
                <a href="{{ path('conference_edit', { id: conference.id }) }}" class="btn btn-primary">Modifier</a> 
                <a href="{{ path('conference_delete', { id: conference.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette conférence ?')" class="btn btn-danger">Supprimer</a> 
                <a href="{{ path('app_conference') }}" class="btn btn-secondary">Retour à la liste des conférences</a>
                {% endif %} 
            </p>
        </div>
    </div>
</div>
</div></div></div><br><br>

{% include 'footer.html.twig' %}

{% endblock %}