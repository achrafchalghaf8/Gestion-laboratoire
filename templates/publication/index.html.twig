{% extends 'base.html.twig' %}

{% block title %}publications{% endblock %}

{% block body %}

<head>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<style>
			body {
			background-color: #f2f2f2;
			font-family: Arial, sans-serif;
		}
		h1 {
			color: #333333;
			text-align: center;
			margin-top: 50px;
		}
		table {
			margin: auto;
			border-collapse: collapse;
			width: 80%;
			margin-top: 30px;
			margin-bottom: 50px;
		}
		th, td {
			text-align: left;
			padding: 8px;
			border-bottom: 1px solid #ddd;
		}
		th {
			background-color: #4CAF50;
			color: white;
		}
		a {
			color: #4CAF50;
			text-decoration: none;
		}
		a:hover {
			color: #333333;
			text-decoration: underline;
		}
		.search-box {
			text-align: center;
			margin-top: 30px;
			margin-bottom: 30px;
		}
		#search-input {
			padding: 10px;
			border-radius: 5px;
			border: none;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
			width: 60%;
			font-size: 16px;
			color: #333333;
		}
		.edit-link {
			color: #3A6BF9;
			text-decoration: none;
			margin-right: 10px;
		}
		.delete-link {
			color: #ff4d4d;
			text-decoration: none;
		}
		.fa-edit:before {
			content: "\f044";
			margin-right: 5px;
			color: #3A6BF9;
		}
		.fa-trash:before {
			content: "\f2ed";
			margin-right: 5px;
			color: #ff4d4d;
		}
	
	</style>
</head>
<body>
	<h1>Gestion de Publications</h1>
	<div class="search-box">
  		<input type="text" id="search-input" placeholder="Recherche d'une publication">
  	</div>
	<table>
		<thead>
			<tr>
				<th>Titre de la publication</th>
				<th>Auteur</th>
				{# <th>Autres auteurs</th> #}
				<th>Date de publication</th>
				<th>DÃ©tails</th>
                <th>lien de Donnees</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		{% for pub in publications %}
  <tr>
    <td>{{ pub.titre }}</td>
    <td>{{ pub.auteur }}</td>
	{# <td>
    {% for auteur in pub.auteurs %}
        {{ auteur.nom_prenom }}
        {% if not loop.last %}, {% endif %}
    {% endfor %}
</td> #}

    <td>{{ pub.date_publication|date('Y-m-d ') }}</td>
	<td>{{ pub.details }}</td>
    <td>{{ pub.lien_donnees }}</td>
     <td style="width: 90px;">
      <a href="{{ path('publication_edit', {id: pub.id}) }}"><i class="fas fa-edit"></i></a>
      <a href="{{ path('publication_delete', {id: pub.id}) }}"  onclick="return confirm('Etes vous sur de supprimer cette publication??')"><i class="fas fa-trash"></i></a>
	  <a href="{{ path('publication_show', {id: pub.id}) }}" style="color: green;"><i class="fas fa-eye"></i></a>

    </td>
  </tr>
{% endfor %}
		</tbody>
	</table>
</body>


<script>
const searchInput = document.querySelector('#search-input');

searchInput.addEventListener('input', () => {
  const filter = searchInput.value.toLowerCase().split(' ');
  const rows = document.querySelectorAll('tbody tr');

  rows.forEach(row => {
    const cells = row.querySelectorAll('td');
    let match = true;

    filter.forEach(word => {
      let wordMatch = false;
      cells.forEach(cell => {
        if (cell.textContent.toLowerCase().includes(word)) {
          wordMatch = true;
        }
      });
      match = match && wordMatch;
    });

    row.style.display = match ? '' : 'none';
  });
});


	</script>
	</div></div></div><br><br>

