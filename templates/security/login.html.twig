{% extends 'base.html.twig' %}

{% block title %}S'authentifier!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        .login-form {
            margin-top: 50px;
        }
        h1 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }
        label {
            font-weight: bold;
        }
        .form-control:focus {
            border-color: #D02A1D;
            box-shadow: 0 0 0 0.25rem rgba(208, 42, 29, 0.25);
        }
        .btn-primary {
            background-color: #D02A1D;
            border-color: #D02A1D;
        }
        .btn-primary:hover {
            background-color: #c52610;
            border-color: #c52610;
        }
    </style>
</head>
<body>
<br><br><br>
    <div style="text-align:center; "class="container-fluid">
        <div class="row justify-content-center">
        {% if error %}
<div style="width: 150%; " class="alert alert-danger mx-auto text-center">Le login ou le mot de passe est incorrect. Veuillez r√©essayer.</div>
                    {% endif %}
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        
                        <form method="post" class="login-form">
                        <img class="mb-4" src="{{ asset('images/login.jpg') }}" alt="" width="120" height="120">


                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            {# <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1> #}
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <br>

                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                                Connexion
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


</div></div> <br><br>
  {# {% include 'footer.html.twig' %} #}
{% endblock %}
